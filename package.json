{
  "name": "toasts-react",
  "version": "0.0.2",
  "description": "Lightweight React toast notification library",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/raghunath-bhattacharjee/toasts-react",
  "repository": {
    "type": "git",
    "url": "https://github.com/raghunath-bhattacharjee/toasts-react.git"
  },
  "bugs": {
    "url": "https://github.com/raghunath-bhattacharjee/toasts-react/issues"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint src",
    "format": "prettier --write ."
  },
  "keywords": [
    "react",
    "reactjs",
    "toast",
    "toast-notification",
    "react-toast",
    "notification",
    "react-notification",
    "ui",
    "ui-library",
    "css-in-js",
    "hooks",
    "context",
    "frontend"
  ],
  "author": "Raghunath Bhattacharjee",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "prettier": "^3.7.4",
    "rollup": "^4.55.1"
  }
}